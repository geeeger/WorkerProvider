  "license": "MIT",
  "bugs": {
    "url": "https://github.com/geeeger/WorkerProvider/issues"
  },
  "homepage": "https://github.com/geeeger/WorkerProvider#readme",
  "devDependencies": {
    "@commitlint/cli": "^7.3.2",
    "@commitlint/config-conventional": "^7.3.1",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "tslint-loader": "^3.5.4",
    "typescript": "^3.2.4",
